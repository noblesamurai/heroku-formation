{
  "name": "heroku-formation",
  "description": "Proxies to a heroku web dyno, starting up required dynos transparently.",
  "version": "1.0.0",
  "author": "Tim Allen <tim@noblesamurai.com>",
  "license": "BSD",
  "main": "src/index.js",
  "scripts": {
    "coverage": "nyc -a -c -r html -r text -r lcov npm test",
    "pretest": "semistandard --env mocha",
    "test": "mocha --recursive test",
    "watch": "mocha --recursive --watch test",
    "docs": "jsdoc2md src/*.js",
    "start": "node src/index"
  },
  "homepage": "https://github.com/noblesamurai/heroku-transparent-up",
  "repository": {
    "type": "git",
    "url": "git://github.com/noblesamurai/heroku-transparent-up.git"
  },
  "bugs": {
    "url": "https://github.com/noblesamurai/heroku-transparent-up/issues"
  },
  "engines": {
    "node": "8.x",
    "npm": "5.x"
  },
  "dependencies": {
    "promise-poller": "^1.6.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "dirty-chai": "^1.2.2",
    "jsdoc-to-markdown": "^4.0.1",
    "mocha": "^5.2.0",
    "nock": "^9.3.3",
    "nyc": "^12.0.2",
    "proxyquire": "^2.0.1",
    "semistandard": "*",
    "supertest": "^3.1.0"
  },
  "keywords": [],
  "nyc": {
    "exclude": [
      "coverage",
      "test"
    ]
  },
  "semistandard": {
    "env": [
      "mocha"
    ]
  }
}
